<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:appbar="clr-namespace:AncoraMVVM.Phone7.BindableAppBar">
    <Style
        TargetType="appbar:BindableAppBar">
        <Setter
            Property="ButtonTemplate">
            <Setter.Value>
                <DataTemplate>
                    <appbar:BindableAppBarButton
                        Command="{Binding Command}"
                        CommandParameter="{Binding CommandParameter}"
                        IconUri="{Binding IconUri}"
                        IsEnabled="{Binding IsEnabled}"
                        Text="{Binding Text}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter
            Property="MenuItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <appbar:BindableAppBarMenuItem
                        Command="{Binding Command}"
                        CommandParameter="{Binding CommandParameter}"
                        IsEnabled="{Binding IsEnabled}"
                        Text="{Binding Text}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>